# Environment Configuration for Azure Deployment
# Copy this file to .env and update the values

# ====== DATABASE CONFIGURATION ======
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PORT=5432
DATABASE_URL=postgresql://flashcard_user:your_secure_postgres_password_here@postgres:5432/flashcards

# ====== API KEYS ======
# Get your Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ====== JWT CONFIGURATION ======
# Generate a secure secret key (use: openssl rand -hex 32)
JWT_SECRET_KEY=your_jwt_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ====== OAUTH CONFIGURATION ======
APPLE_CLIENT_ID=your_apple_client_id
APPLE_CLIENT_SECRET=your_apple_client_secret

# ====== APPLICATION CONFIGURATION ======
ENVIRONMENT=production
LOG_LEVEL=info
CORS_ORIGINS=https://your-frontend-domain.azurecontainerapps.io

# ====== AZURE CONFIGURATION ======
# Azure Storage for file uploads (optional)
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string

# Azure Key Vault for secrets management (recommended for production)
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# ====== REDIS CONFIGURATION ======
REDIS_PASSWORD=your_redis_password_here
REDIS_PORT=6379

# ====== PORT CONFIGURATION ======
BACKEND_PORT=8000
FRONTEND_PORT=3000
NGINX_PORT=80
NGINX_SSL_PORT=443

# ====== FRONTEND CONFIGURATION ======
REACT_APP_API_URL=https://your-backend-domain.azurecontainerapps.io
REACT_APP_ENVIRONMENT=production

# ====== AZURE CONTAINER APPS SPECIFIC ======
# These will be set by Azure Container Apps
# WEBSITES_PORT=8000
# ASPNETCORE_URLS=http://+:8000